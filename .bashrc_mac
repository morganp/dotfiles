#Bashrc for MAC

#User Scripts
export PATH=$PATH:~/bin/scripts_generic

#Scheme
export PATH=$PATH:~/bin/racket/bin

#Manual nginx install
export PATH=$PATH:~/bin/nginx/sbin

#Extra paths for manual ruby update
#http://hivelogic.com/articles/compiling-ruby-rubygems-and-rails-on-snow-leopard/
export PATH="/usr/local/bin:$PATH"
export PATH="/usr/local/sbin:$PATH"

export PATH="~/sbin:$PATH"

#Moving to Homebrew and putting those executables in ~/bin
#For Darwin Ports
#export PATH=/opt/local/bin/:$PATH
#export PATH=/opt/local/sbin/:$PATH

#Path for fink (Package Managment)
#export PATH=/sw/bin/:$PATH

#Add path for mysql package
export PATH=$PATH:/usr/local/mysql/bin/

#Add Path for google code install of git (Source control)
export PATH=$PATH:/usr/local/git/bin/

#Ruby Enterprise 1.8.7
# Trying to use RVM now /usr/bin/ruby
#export PATH=~/bin/ruby-ee-1.8.7/bin:$PATH

#Add jruby to path
#export PATH="$PATH:~/bin/jruby"

# Stuff for RVM Ruby version manager
# http://rvm.beginrescueend.com/
[[ -s $HOME/.rvm/scripts/rvm ]] && source $HOME/.rvm/scripts/rvm

################################
## Custom Alias
################################
# Colour ls
export CLICOLOR=1
alias ll="/bin/ls -lF"


alias nginx="nginx -p ~/bin/nginx/ -s stop && nginx -p ~/bin/nginx/ "
alias tkdiff="/Applications/TkDiff.app/Contents/MacOS/Wish\ Shell"
